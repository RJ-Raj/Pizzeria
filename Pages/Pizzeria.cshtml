@page
@model Pizzaria.Pages.PizzeriaModel
@{
}

@*<a class="nav-link text-dark" asp-area="" asp-page="Forms/CustomPizza">CustomPizza</a>
<a class="nav-link text-dark" asp-area="" asp-page="Checkout/Checkout">Checkout</a>*@

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Try our mouth watering collections</h1>
        <h4> Fill your Hunger within 30 minutes!!</h4>
        <h4> Choose one, or try our custom Pizza Builder.</h4>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/pizzas/1.jpg" class="w-100" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwntext mt-5">
                            <h3 style="text-align:left;">Create your own Pizza!</h3>
                            <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Try it Now!!</a>
                        </div>
                    </div>
                </div>
            </div>
                @foreach (var pizza in Model.fakeDB)
                    {
                        var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".jpg");
                        <div class="col-4 mb-5">
                                <img src="@imagePath" class="w-100" asp-append-version="true"/>
                                  <p>@pizza.PizzaName</p>
                                <a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice" asp-route-PizzaName="@pizza.PizzaName">Get this Pizza!</a><br/>
                        </div>
                    }
        </div>



    </div>


</div>