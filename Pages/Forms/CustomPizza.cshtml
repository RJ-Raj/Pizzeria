@page
@model Pizzaria.Pages.Forms.CustomPizzaModel
@{
}

@*<a class="nav-link text-dark" asp-area="" asp-page="Checkout/Checkout">Checkout</a>*@


<div class="text-center container">
    <h1>Create Your Own Pizza of your Choice!!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza name" />
        <br/>
        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato Sauce">Tomato Sauce
        <br />
        <input type="checkbox" asp-for="Pizza.Peproni" placeholder="Peproni">Peproni
        <br />
        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese">Cheese
        <br />
        <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom">Mushroom
        <br />
        <input type="checkbox" asp-for="Pizza.Paneer" placeholder="Paneer">Paneer
        <br />
        <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple">Pineapple
        <br />
        <input type="checkbox" asp-for="Pizza.Chicken" placeholder="Chicken">Chicken
        <br />

        <button class="btn btn-primary mt-1" type="submit">Order my Pizza!!</button>
    </form>



</div>