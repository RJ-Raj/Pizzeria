<h1>Your Cart has these items</h1>

@{

    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".jpg");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src =@imagePath class="w-100" asp-append-version="true" />
        <p> You have selected @Model.PizzaName Pizza of your choice.</p>
        <p> Total Price of items selected : &#x20b9; @Model.PizzaPrice</p>

        <br />
        <a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a>

    </div>
</div>
